<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/grad_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="56dp"
    android:paddingRight="24dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:src="@drawable/iiitdwd" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/take_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take attendance"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/chatbot_btnF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Chatbot"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/check_stdAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Check Student Attendance"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/feed_btnF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Feedback"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fac_chngPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Change Password"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/logout_fac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Logout"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"/>

</LinearLayout>
</ScrollView>
</RelativeLayout>